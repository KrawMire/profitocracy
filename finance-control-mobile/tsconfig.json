{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "utils/*": ["./src/utils/*"],
      "domain/*": ["./src/domain/*"],
      "state/*": ["./src/state/*"],
      "storage/*": ["./src/storage/*"],
      "screens/*": ["./src/ui/screens/*"],
      "components/*": ["src/ui/components/*"],
      "styles/*": ["./src/ui/styles/*"]
    }
  }
}