<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Profitocracy.Mobile.Views.Pages.Settings.SettingsPage"
             Title="Settings">
    <ScrollView Padding="20">
        <StackLayout>
            <Label Text="Application settings"
                   Style="{StaticResource BlockHeader}"
                   Margin="0,0,0,5"/>
            <Frame Padding="0">
                <StackLayout Style="{StaticResource MenuCategory}"
                             Padding="10">
                    <StackLayout Orientation="Horizontal"
                                 Padding="0, 10">
                        <Button Text="Expense categories"
                                x:Name="CategoriesButton"
                                Clicked="CategoriesButton_OnClicked"/>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <Label Text="System settings"
                   Style="{StaticResource BlockHeader}"
                   Margin="0,20,0,5"/>
            <Frame Padding="0">
                <StackLayout Style="{StaticResource MenuCategory}"
                             Padding="10">
                    <StackLayout Orientation="Horizontal"
                                 Padding="0, 10">
                        <Button Text="Theme"
                                x:Name="ThemeSettingsButton"
                                Clicked="ThemeSettingsButton_OnClicked"/>
                    </StackLayout>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>