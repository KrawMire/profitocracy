<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Profitocracy.Mobile.Views.Pages.Settings.SettingsPage"
             Title="Settings">
    <ScrollView Padding="20"
                VerticalScrollBarVisibility="Never">
        <StackLayout>
            <Label Text="Application settings"
                   Style="{StaticResource BlockHeader}"
                   Margin="0,0,0,8"/>
            <Frame Padding="0">
                <StackLayout Style="{StaticResource MenuCategory}"
                             Padding="8">
                    <Grid>
                        <Button BackgroundColor="Transparent"
                                Text="Expense categories"
                                Style="{StaticResource SettingsNavigationButton}"
                                x:Name="CategoriesButton"
                                Clicked="CategoriesButton_OnClicked" />
                    </Grid>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>