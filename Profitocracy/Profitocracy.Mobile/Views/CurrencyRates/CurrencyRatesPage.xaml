<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Profitocracy.Mobile.Views.Pages.CurrencyRates.CurrencyRatesPage"
             Title="Currency Rates">
    <ScrollView>
        <CollectionView x:Name="CurrenciesListView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <FlexLayout JustifyContent="SpaceBetween">
                            <StackLayout>
                                <Label Text="US Dollar"/>
                                <Label Text="1 RUB = 0.12 USD"/>
                            </StackLayout>
                            <Label Style="{StaticResource CurrencySign}"
                                   Text="$"
                                   VerticalOptions="Center"/>
                        </FlexLayout>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>    
    </ScrollView>
</ContentPage>