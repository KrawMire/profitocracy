<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:Profitocracy.Mobile.Pages"
       x:Class="Profitocracy.Mobile.AppShell">
    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate pages:HomePage}"/>
        </Tab>
        <Tab Title="Currencies" Icon="currencies.png">
            <ShellContent ContentTemplate="{DataTemplate pages:CurrencyRatesPage}"/>
        </Tab>
        <Tab Title="Transactions" Icon="transactions.png">
            <ShellContent ContentTemplate="{DataTemplate pages:TransactionsPage}"/>
        </Tab>
        <Tab Title="Settings" Icon="settings.png">
            <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}"/>
        </Tab>
    </TabBar>
</Shell>
